if [ ! -d /usr/local/include/pml ]; then
    mkdir /usr/local/include/pml
fi

cp src/pml.hpp /usr/local/include/pml
cp src/pml_vector.hpp /usr/local/include/pml
cp src/pml_matrix.hpp /usr/local/include/pml
cp src/pml_tensor.hpp /usr/local/include/pml
cp src/pml_rand.hpp /usr/local/include/pml

cp src/pml_utils.hpp /usr/local/include/pml
cp src/pml_spceial.hpp /usr/local/include/pml

if [ ! -d /usr/local/include/pml/ml ]; then
    mkdir /usr/local/include/pml/ml
fi

cp src/pml_nmf.hpp /usr/local/include/pml/ml
cp src/pml_hmm.hpp /usr/local/include/pml/ml
cp src/pml_bcpm.hpp /usr/local/include/pml/ml



